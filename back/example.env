# ==========================================
# Configuración de Base de Datos
# ==========================================
# Para DESARROLLO LOCAL (sin Docker):
# DB_HOST=localhost

# Para DOCKER COMPOSE:
# DB_HOST=postgres

DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=change_me_in_production
DB_DATABASE=saborea_colombia_db
DB_SYNCHRONIZE=true
DB_LOGGING=false

# ==========================================
# Configuración JWT
# ==========================================
# CAMBIAR EN PRODUCCIÓN: Usa una cadena aleatoria segura de 32+ caracteres
JWT_SECRET= Mousekerramienta_Misteriosa_de_Mickey_12345
JWT_EXPIRATION=24h

# ==========================================
# Configuración de Aplicación
# ==========================================
NODE_ENV=development
PORT=3000

# ==========================================
# Configuración Swagger (Documentación API)
# ==========================================
SWAGGER_TITLE=Saborea Colombia API
SWAGGER_DESCRIPTION=Directorio Gastronómico de Colombia
SWAGGER_VERSION=1.0.0